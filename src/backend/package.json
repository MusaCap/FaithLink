{
  "name": "faithlink360-backend",
  "version": "1.0.0",
  "description": "FaithLink360 Backend API - Church Member Engagement Platform",
  "main": "src/server-prisma.ts",
  "scripts": {
    "dev": "nodemon src/server-prisma.ts",
    "build": "npx prisma generate && npx prisma migrate deploy",
    "start": "npx ts-node src/server-prisma.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed-production": "prisma db seed",
    "db:studio": "prisma studio",
    "db:setup": "node scripts/setup-database.js",
    "db:reset": "npx prisma migrate reset --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:setup": "prisma generate --schema=prisma/schema.test.prisma",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prisma": "^5.22.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "church",
    "member",
    "engagement",
    "api"
  ],
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "FaithLink360 Team",
  "license": "MIT"
}
